<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitapTakipMauii.Pages.MyBooksPage"
             Title="Kitaplarım"
             BackgroundColor="#F5F5F5">
    <VerticalStackLayout Padding="15" Spacing="15">
        <!-- Arama ve Filtre Alanı -->
        <HorizontalStackLayout Spacing="10">
            <VerticalStackLayout Spacing="3">
                <Label Text="Tür"
                       FontSize="10"
                       TextColor="#666666"
                       HorizontalOptions="Start" />
                <Entry x:Name="GenreEntry"
                       Placeholder="Tür Ara"
                       Text="{Binding SelectedGenre, Mode=TwoWay}"
                       TextChanged="GenreEntry_TextChanged"
                       FontSize="14"
                       TextColor="Black"
                       PlaceholderColor="#999999"
                       BackgroundColor="White"
                       WidthRequest="110"
                       HeightRequest="35"
                       VerticalOptions="Center"
                       Style="{StaticResource EntryStyle}" />
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="3">
                <Label Text="Yazar"
                       FontSize="10"
                       TextColor="#666666"
                       HorizontalOptions="Start" />
                <Entry x:Name="AuthorEntry"
                       Placeholder="Yazar Ara"
                       Text="{Binding SelectedAuthor, Mode=TwoWay}"
                       TextChanged="AuthorEntry_TextChanged"
                       FontSize="14"
                       TextColor="Black"
                       PlaceholderColor="#999999"
                       BackgroundColor="White"
                       WidthRequest="110"
                       HeightRequest="35"
                       VerticalOptions="Center"
                       Style="{StaticResource EntryStyle}" />
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="3">
                <Label Text="Kitap"
                       FontSize="10"
                       TextColor="#666666"
                       HorizontalOptions="Start" />
                <Entry Text="{Binding SearchTitle, Mode=TwoWay}"
                       Placeholder="Kitap Adı Ara"
                       TextChanged="SearchTitle_TextChanged"
                       FontSize="14"
                       TextColor="Black"
                       PlaceholderColor="#999999"
                       BackgroundColor="White"
                       WidthRequest="110"
                       HeightRequest="35"
                       VerticalOptions="Center"
                       Style="{StaticResource EntryStyle}" />
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <!-- Yükleme Göstergesi -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="#6200EE"
                           WidthRequest="50"
                           HeightRequest="50"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />

        <!-- Kitaplar Listesi -->
        <CollectionView ItemsSource="{Binding Books}"
                        SelectionMode="None"
                        IsVisible="{Binding IsNotBusy}"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="10"
                                 HorizontalItemSpacing="1"
                                 VerticalItemSpacing="1" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="4"
                            Padding="6"
                            StrokeThickness="1"
                            Stroke="#E0E0E0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 10"
                            WidthRequest="120"
                            HeightRequest="240">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="120" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0"
                                   Source="{Binding CoverImage, FallbackValue='default_book_cover.png'}"
                                   Aspect="AspectFill"
                                   HeightRequest="120"
                                   WidthRequest="90"
                                   HorizontalOptions="Center" />
                            <Label Grid.Row="1"
                                   Text="{Binding Title}"
                                   TextColor="Black"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="2"
                                   Padding="4" />
                            <Label Grid.Row="2"
                                   Text="{Binding Author}"
                                   TextColor="Black"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="1"
                                   Padding="2" />
                            <Label Grid.Row="3"
                                   Text="{Binding Genre}"
                                   TextColor="Black"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="WordWrap"
                                   MaxLines="1"
                                   Padding="2" />
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToBookDetailCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Alt Butonlar -->
        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
            <Button Text="Ekle"
                    Command="{Binding AddBookCommand}"
                    BackgroundColor="#6200EE"
                    TextColor="White"
                    FontSize="14"
                    CornerRadius="5"
                    WidthRequest="100"
                    HeightRequest="35" />
            <Button Text="Yenile"
                    Command="{Binding RefreshCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="14"
                    CornerRadius="5"
                    WidthRequest="100"
                    HeightRequest="35" />
            <Button Text="Çıkış"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="#B0BEC5"
                    TextColor="White"
                    FontSize="14"
                    CornerRadius="5"
                    WidthRequest="100"
                    HeightRequest="35" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

    <!-- Stil Tanımları -->
    <ContentPage.Resources>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="White" />
                                <Setter Property="Opacity" Value="1" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Focused">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="White" />
                                <Setter Property="Opacity" Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
</ContentPage>